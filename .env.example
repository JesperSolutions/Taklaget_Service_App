# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Set DATABASE_TYPE to either "sqlite" or "postgresql"
DATABASE_TYPE=sqlite
DATABASE_URL=file:./dev.db

# If using PostgreSQL, uncomment and update the following:
# DATABASE_URL=postgresql://username:password@localhost:5432/roof_inspection_db

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760 # 10MB in bytes

# API Configuration
API_TOKEN_SECRET=your_secret_key_here